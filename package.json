{
  "name": "auth-session-management",
  "version": "1.0.0",
  "description": "An authentication & session management system built using clean architecture principles",
  "scripts": {
    "dev": "dotenv -- tsc-watch --onSuccess \"dotenv -- node dist/server.js\"",
    "start": "dotenv -e .env.production -e .env -- node dist/server.js",
    "build": "tsc",
    "test": "dotenv -c test -- npm run db-migrate-up && dotenv -c test -- jest",
    "db-migrate-create": "dotenv -- node migrations/index.js create --name",
    "db-migrate-up": "dotenv -- node migrations/index.js up",
    "db-migrate-down": "dotenv -- node migrations/index.js down",
    "db-migrate-list": "dotenv -- node migrations/index.js executed"
  },
  "author": "frontDev",
  "license": "ISC",
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "bcrypt": "^6.0.0",
    "dotenv-cli": "^11.0.0",
    "fastify": "^5.6.1",
    "module-alias": "^2.3.3",
    "postgres": "^3.4.7",
    "redis": "^5.10.0",
    "sanitize-filename": "^1.6.3",
    "umzug": "^3.8.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.12",
    "@tsconfig/node20": "^20.1.9",
    "@types/bcrypt": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^25.2.0",
    "@types/supertest": "^6.0.3",
    "jest": "^30.2.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.2.2",
    "ts-jest": "^29.4.6",
    "tsc-watch": "^7.2.0",
    "typescript": "^5.9.3"
  },
  "_moduleAliases": {
    "@application": "dist/application",
    "@infrastructure": "dist/infrastructure",
    "@controllers": "dist/controllers",
    "@entities": "dist/entities",
    "@shared": "dist/shared",
    "@configs": "dist/configs",
    "@tests": "dist/tests"
  }
}
