{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": ["src/**/*.{js,ts}", "tests/**/*.ts"],
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							":NODE:",
							[
								":PACKAGE:",
								"!@application",
								"!@application/**",
								"!@infrastructure",
								"!@infrastructure/**",
								"!@controllers",
								"!@controllers/**",
								"!@entities",
								"!@entities/**",
								"!@configs",
								"!@configs/**",
								"!@tests",
								"!@tests/**",
								"!@shared",
								"!@shared/**",
								"!src/*"
							],
							":BLANK_LINE:"
						]
					}
				}
			}
		}
	}
}
